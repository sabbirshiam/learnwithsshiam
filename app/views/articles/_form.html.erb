<%= render 'error', obj: @article %>
<div class="row">
    <div class="col-xs-12">
      <%= form_with(scope: :article, model: @article, url: url, local: true,:html => {class: "form-horizontal", role: "form"}) do |form| %>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= form.label :title %>
            </div>
            <div class="col-sm-6">
              <%= form.text_field :title , class: "form-control", placeholder: "Title of the article", autofocus: true, required: true%>
            </div>
          </div>
            <div class="form-group">
            <div class="control-label col-sm-2">
              <%= form.label :description %>
            </div>
            <div class="col-sm-6">
              <%= form.text_area :description , rows: 10, class: "form-control", placeholder: "Body of article", required: true%>
            </div>
          </div>
         
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= form.submit class: 'btn btn-primary btn-large' %>
            </div>
          </div>

      <% end %>
    </div>
</div>
